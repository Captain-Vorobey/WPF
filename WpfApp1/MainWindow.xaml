<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Background="Blue" MinWidth="30" Content="Авторизация" Click="Login_Click" />
            <Button Background="Blue" MinWidth="100" Content="Создание объекта" Click="Login_Click1"/>
            <Button Background="White" MinWidth="100" Name="button1" Content="Тест" Click="Login_Click2"/>
            <Button Background="Red" MinWidth="100" Content="Графика" Click="Login_Click3"/>
            <Button Background="Black" MinWidth="100" Content="База данных" Click="Login_Click4"/>
            <Button Background="Brown" MinWidth="100" Content="Статьи" Click="Login_Click5"/>
        </StackPanel>
        
    </Grid>
</Window>
